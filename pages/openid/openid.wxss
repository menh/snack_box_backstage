/* pages/openBox/openBox.wxss */
page{
  height:100%;
}

.id-get{
  height: 90rpx;
  width: 400rpx;
  margin-left: auto;
  margin-right: auto;
  margin-top: 300rpx;
  border-radius: 20rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 36rpx;
  color: white;
  background-color:#267BD9;
}

.id-show{
  height: 90rpx;
  width: 400rpx;
  margin-left: auto;
  margin-right: auto;
  margin-top: 80rpx;
  border-radius: 20rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 25rpx;
  color: gainsboro;
}









.openBox{
  height: 100%;
  width: 100%;
  background-color: #8FBFF5;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.openBox-box{
  height: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 280rpx;
}

.openBox-input-label{
  color: white;
  word-spacing: 10rem;
  font-weight:  bold;
  margin-left: auto;
  margin-right: auto;
  font-size: 40rpx;
}

.openBox-input{
  width: 320rpx;
  height: 130rpx;
  line-height: 130rpx;
  background-color: white;
  border-radius: 10rpx;
  margin-left: auto;
  margin-right: auto;
  margin-top: 40rpx;
  font-weight:  bold;
  font-size: 55rpx;
  text-align: center;
  color:#0653A8;
}

.openBox-submit{
  width: 165rpx;
  height: 80rpx;
  margin-top: 50rpx;
  margin-left: auto;
  margin-right: auto;
  border-radius: 10rpx;
  background-color: white;
  line-height: 80rpx;
  font-size: 40rpx;
  text-align: center;
  color: #0653A8;
}
