/* pages/box/box.wxss */
page{
  width: 100%;
  height: 100%;
  background-color:#f4f4f4;
}

.sales {
  width: 100%;
}

.sales-title{
  width: 100%;
  height: 205rpx;
  background-color:#f4f4f4;
  display: flex;
  flex-direction: column;
}

.sales-title-category{
  width: 100%;
  height: 100rpx;
  background-color: white;
  display: flex;
  flex-direction: row;
}

.sales-title-category-title-choose{
  width: 187.5rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;

  color: #267BD9;
  font-size: 36rpx;
  font-weight: bold;
}
.sales-title-category-title{
  width: 187.5rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #000000;
  font-size: 36rpx;
  font-weight: bold;
}

.sales-title-data{
  width: 100%;
  height: 100rpx;
  margin-top: 5rpx;
  background-color: white;
  display: flex;
  flex-direction: row;
}

.sales-title-data-class{
  width: 187rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.sales-title-data-class-data{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  margin-top: 10rpx;
  color: #267BD9;
  font-size: 34rpx;
  font-weight: bold;
  text-align: center;
}
.sales-title-data-class-title{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  color: #9A9A9A;
  font-size: 22rpx;
  text-align: center;
}

.sales-good {
  width: 100%;
  margin-top: 10rpx;
}

.sales-good-item{
  width: 730rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-left: auto;
  margin-right: auto;
  margin-bottom: 5rpx;
  line-height: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: white;
}

.sales-good-item-img{
  width: 100rpx;
  height: 100rpx;
  margin-left: 15rpx;
}

.sales-good-item-property{
   width: 245rpx;
  height: 80rpx;
  margin-left: 20rpx;
  line-height: 100%;
  display: flex;
  flex-direction: column;
  align-items: left;
}

.sales-good-item-property-goodName{
  margin-top: 7rpx;
  margin-bottom: 8rpx;
  color: #585858;
  font-size: 27rpx;
}

.sales-good-item-property-price{
  color: #999;
  font-size: 27rpx;
}
.sales-good-item-orderNum{
  width: 145rpx;
  height: 65rpx;
  line-height: 65rpx;
  margin-right: 25rpx;
  margin-left: auto;
  font-size: 35rpx;
  text-align: center;
  font-weight: 300;
}