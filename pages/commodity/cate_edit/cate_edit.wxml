<view class='page'>
  <view class="page-section">
    <view class="page-section-title">目录名</view>
    <input class="page-section-input" name="input" placeholder="目录名" value='{{cate.name}}' bindinput="bindNameInput"></input>
  </view>

  <view class="page-section">
    <view class="page-section-title">优先</view>
    <input class="page-section-input" name="input" type="number" placeholder="优先级" value='{{cate.priority}}' bindinput="bindPriorityInput"></input>
  </view>

  <view class="page-section">
    <view class="page-section-title">是否显示</view>
    <radio-group class='page-section-radio' name="radio" bindchange="bindDisplayChange">
      <radio value="true" checked="{{cate.display}}">显示</radio>
      <radio value="false" checked="{{!cate.display}}">隐藏</radio>
    </radio-group>
  </view>

  <button class="page-submit" type="primary" bindtap='submit_cate_edit'>提交</button>
</view>