<view class='page'>

  <view class="page-section">
    <view class="page-section-title">结构名</view>
    <input class="page-section-input" name="input" placeholder="结构名" value='{{structureItem.name}}' bindinput="bindGoodNameInput"></input>
  </view>
  <view class="page-section">
    <view class="page-section-title">备注</view>
    <input class="page-section-input" name="input" placeholder="备注" value='{{structureItem.remarks}}' bindinput="bindGoodNameInput"></input>
  </view>

  <view class="page-section">
    <view class="page-section-title">商品</view>


    <view class='page-section-item' wx:for="{{structureItem.goods}}" wx:for-item="good_item" wx:key="{{index}}">



      <view class='page-section-item-content'>{{good_item.goodName}}</view>
      <view class='page-section-item-content'>x {{good_item.sum}}</view>
      <button wx:if="{{structureItem.structureId==''}}" class='page-section-item-content-button' type='warn' data-index='{{index}}' bindtap='good_delete'>删除
      </button>
    </view>


    <picker wx:if="{{structureItem.structureId==''}}" class='page-section-picker' mode="multiSelector" bindchange="bindMultiPickerGoodChange" range="{{goodsArray}}">
      <image class='page-section-picker-image' src='/image/add.png'></image>
    </picker>

  </view>
  <view class="page-section">
    <view class="page-section-title">是否显示</view>
    <radio-group class='page-section-radio' name="radio" bindchange="bindValidChange">
      <radio value="1" checked="{{structureItem.display==='1'?true:false}}">显示</radio>
      <radio value="0" checked="{{structureItem.display==='1'?false:true}}">隐藏</radio>
    </radio-group>
  </view>



  <button class="page-submit" type="primary" bindtap='submit_struct ure_edit'>提交</button>
</view>