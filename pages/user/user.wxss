page {
  width: 100%;
  height: 100%;
  background-color: #f4f4f4;
}

.page {
  width: 100%;
}

.page-title {
  width: 100%;
  height: 100rpx;
  background-color: white;
  display: flex;
  flex-direction: row;
}

.page-title-cate-choose {
  width: 375rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #cf5500;
  font-size: 36rpx;
  font-weight: bold;
}

.page-title-cate {
  width: 375rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #000;
  font-size: 36rpx;
  font-weight: bold;
}

.page-cate {
  width: 100%;
  height: 70rpx;
  margin-top: 10rpx;
  background-color: white;
  display: flex;
  flex-direction: row;
}

.page-cate-name{
  
  width: 150rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  color: #000;
  font-size: 30rpx;
  /* font-weight: bold; */
}


.page-item{
  width: 740rpx;
  height: 150rpx;
  border-radius: 8rpx;
  margin-left: auto;
  margin-right: auto;
  margin-top: 5rpx;
  line-height: 150rpx;
  display: flex;
  flex-direction: row;
  background-color: white;
}

.page-item-content{
  width: 150rpx;
  height: 150rpx;
  line-height: 150rpx;
  text-align: center;
  color: #585858;
  font-size: 22rpx;
}
.page-item-content-c{
